{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",

        "baseUrl": "./",
        "outDir": "./dist/out-tsc",

        // "rootDir": "./src",
        "rootDirs": [
            "./src", "../shared"
        ],

        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,

        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [ "es2018", "dom" ]
    },
    "include": [
        "./src", "../shared"
    ],
    "exclude": [
        "./node_modules"
    ]
}
